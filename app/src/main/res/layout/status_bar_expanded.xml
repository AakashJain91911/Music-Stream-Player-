<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notificationbg" android:layout_width="fill_parent" android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff">

<android.support.v7.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/toolbar3"
    android:background="#fff">


</android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/toolbar3"
        android:orientation="vertical"
        android:id="@+id/linearLayout2">

        <ImageView
            android:id="@+id/imgfull"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/images" />
    </LinearLayout>

    <TextView
        android:id="@+id/status_bar_track_name"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/status_bar_artist_name"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/status_bar_track_name"
        android:layout_alignStart="@+id/status_bar_track_name"
        android:layout_below="@+id/status_bar_track_name" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_arrow_back_black_24dp" />


        <SeekBar
            android:id="@+id/length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

           android:layout_below="@+id/imgfull"
            tools:ignore="NotSibling"
            android:layout_above="@+id/pre"/>


      <ImageButton
        android:id="@+id/pre"
        android:layout_width="40dp"
        android:layout_height="50dp"

        android:layout_alignLeft="@+id/status_bar_artist_name"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/status_bar_artist_name"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:background="#fff"
        android:src="@drawable/ic_skip_previous" />

    <ImageButton
        android:id="@+id/playstop"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#fff" />

    <ImageButton
        android:id="@+id/next"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp"
        android:layout_toEndOf="@+id/playstop"
        android:layout_toRightOf="@+id/playstop"
        android:background="#fff"
        android:src="@drawable/ic_skip_next" />

</RelativeLayout>